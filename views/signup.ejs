<!doctype html>

<html lang='en'>
  <head>
    <link rel="stylesheet" href="/css/forms.css" type='text/css' />
    <% include partials/header %>
    <script src='/js/components/forms.js' defer></script>
    <script src='/js/main.js' defer></script>

    <title>Sign up</title>
  </head>

  <body class='background'>

    <div id='vue'>
      <root-preloading v-if='isPreloding'></root-preloading>
      <template v-else>
        <navigation :desktop='desktop'></navigation>

        <div class='mobile-margin'></div>
        <card-form act='/signup'>
          <form-title>{{ l.bigSignUpTitle }}</form-title>
          <form-input :max='40' name='username' :placeholder='l.newUsernameInputPlaceholder' type='text'></form-input>
          <form-input :max='40' name='email' :placeholder='l.emailInputPlaceholder' type='text'></form-input>
          <form-input :max='40' name='password' :placeholder='l.newPasswordInputPlaceholder' type='password'></form-input>
          <form-input :max='40' name='confirm' :placeholder='l.confirmNewPasswordInputPlaceholder' type='confirmpassword'></form-input>
          <form-checkbox name='termsagreement' :initial='false' mustbe='true' :errormsg='l.privacyPolicyCheckBoxErrorMsg'>{{ l.privacyPolicyPlaceholderCheckBox }}</form-checkbox>
          <form-button>{{ l.signUpButton }}</form-button>
        </card-form>
        <div class='mobile-margin'></div>
      </template>
    </div>

  </body>
</html>
